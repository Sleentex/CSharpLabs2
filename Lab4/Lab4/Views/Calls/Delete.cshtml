@model Lab4.Models.Call

@{ ViewData["Title"] = "Видалення дзвінка"; }


<h3>Ви впевнені, що хочете видалити даний дзвінок</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConversationDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConversationDuration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateStart)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку дзвінків</a>
    </form>
</div>
