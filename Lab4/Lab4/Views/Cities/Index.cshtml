@model IEnumerable<Lab4.Models.City>

@{ ViewData["Title"] = "Міста"; }


<p>
    <a asp-action="Create">Створити нове місто</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tariff)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tariff)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детальніше</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
