@model Lab4.Models.City

@{ ViewData["Title"] = "Стоврення міста"; }


<h4>Створити місто</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneCode" class="control-label"></label>
                <input asp-for="PhoneCode" class="form-control" />
                <span asp-validation-for="PhoneCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tariff" class="control-label"></label>
                <input asp-for="Tariff" class="form-control" />
                <span asp-validation-for="Tariff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку міст</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
